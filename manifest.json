{
  "name": "Infinite Commits",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Infinite scroll on commit pages for GitHub",
  "permissions": [
    "https://github.com/*/*/commits/*"
  ],
  "icons": {
    "128": "src/icons/active128.png"
  },
  "browser_action": {
    "default_icon": "src/icons/inactive128.png",
    "default_title": "Infinite Commits"
  },
  "background": {
    "scripts": ["src/js/background.js"]
  },
  "homepage_url": "https://github.com/papernotes",
  "content_scripts":[
    {
      "matches": [
        "https://github.com/*/*/commits/*"
      ],
      "js": ["src/js/entry.js"]
    }
  ],
  "web_accessible_resources": ["src/js/init.js"]
}